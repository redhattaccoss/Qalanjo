<?xml version="1.0" encoding="UTF-8"?>


<!-- Build for qalanjo. Pretty much the only purpose is to deploy the apache 
    htdocs as defined in build.properties -->
<project name="qalanjo" default="deploy" basedir=".">

 <property file="build.properties" />

 <target name="deploy">

     <delete dir="${full.deploy.path}"></delete>

     <copy todir="${full.deploy.path}">

         <fileset dir=".">
             <exclude name="**/test/**"></exclude>
         </fileset>

     </copy>

 </target>

</project>